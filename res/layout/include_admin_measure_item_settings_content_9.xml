<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <!-- contents 4 -->

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/woman"
            android:textColor="#ff000000"
            android:textSize="@dimen/sp51" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/admin_measure_item_settings_from_level_9"
            android:layout_width="0dp"
            android:layout_height="@dimen/px78"
            android:layout_weight="1"
            android:background="@drawable/admin_edittext_background"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:text=""
            android:textColor="#393b40"
            android:textSize="@dimen/sp51" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  ~  "
            android:textColor="#ff000000"
            android:textSize="@dimen/sp54"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/admin_measure_item_settings_to_level_9"
            android:layout_width="0dp"
            android:layout_height="@dimen/px78"
            android:layout_weight="1"
            android:background="@drawable/admin_edittext_background"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:text=""
            android:textColor="#393b40"
            android:textSize="@dimen/sp51" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="D"
            android:textColor="#ff000000"
            android:textSize="@dimen/sp51" />
    </RelativeLayout>

</LinearLayout>