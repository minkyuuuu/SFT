<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ff56a9e5"
    android:orientation="vertical"
    android:paddingLeft="@dimen/px40" >

    <View
        android:layout_width="@dimen/px1"
        android:layout_height="@dimen/px12" />

    <!-- user info (id, name, age, date) -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px150"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/user_photo"
            android:layout_width="@dimen/px150"
            android:layout_height="@dimen/px150"
            android:layout_gravity="center_vertical"
            android:background="@drawable/default_photo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px150"
            android:layout_marginLeft="@dimen/px40"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/admin_list_2_id"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/id"
                android:textColor="#ff343434"
                android:textSize="@dimen/sp42" />

            <TextView
                android:id="@+id/admin_list_2_name_age"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/name"
                android:textColor="#ff343434"
                android:textSize="@dimen/sp42" />

            <TextView
                android:id="@+id/admin_list_2_date"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="검사일시 : 2015-03-13 14:14"
                android:textColor="#ff343434"
                android:textSize="@dimen/sp42" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="@dimen/px1"
        android:layout_height="@dimen/px10" />

    <!-- contents (measure score, average, body age) -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px60"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/admin_list_2_measure_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="근력 : C(3.00)"
                android:textColor="@color/list_item_admin_list_type_1_id"
                android:textSize="@dimen/sp48" />

            <TextView
                android:id="@+id/admin_list_2_measure_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="심페지구력 : C(3.00)"
                android:textColor="@color/list_item_admin_list_type_1_id"
                android:textSize="@dimen/sp48" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px60"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/admin_list_2_measure_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="유연성 : C(3.00)"
                android:textColor="@color/list_item_admin_list_type_1_id"
                android:textSize="@dimen/sp48" />

            <TextView
                android:id="@+id/admin_list_2_measure_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="유연성 : C(3.00)"
                android:textColor="@color/list_item_admin_list_type_1_id"
                android:textSize="@dimen/sp48" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px60"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/admin_list_2_measure_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="유연성 : C(3.00)"
                android:textColor="@color/list_item_admin_list_type_1_id"
                android:textSize="@dimen/sp48" />

            <TextView
                android:id="@+id/admin_list_2_measure_6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="유연성 : C(3.00)"
                android:textColor="@color/list_item_admin_list_type_1_id"
                android:textSize="@dimen/sp48" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px60"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/admin_list_2_measure_average"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="평균 : C(3.00)"
                android:textColor="#ff343434"
                android:textSize="@dimen/sp48"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/admin_list_2_measure_body_age"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="신체나이 : 63세"
                android:textColor="#ff343434"
                android:textSize="@dimen/sp48"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="@dimen/px1"
        android:layout_height="@dimen/px10" />

</LinearLayout>